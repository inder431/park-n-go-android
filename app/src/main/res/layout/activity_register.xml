<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.register.RegisterActivity">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/backArrow"
        android:padding="10dp"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleLayout"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ropa_sans"
            android:text="Welcome to Park'n Go"
            android:textAlignment="center"
            android:textColor="#59BE5D"
            android:layout_marginTop="80dp"
            android:textSize="30sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/titleLayout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameLabel"
            android:text="@string/full_name_label"
            android:textColor="@color/label_grey"
            android:textSize="20sp"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/m_plus_rounded_1c_extrabold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/nameEditText"
            android:background="@drawable/edit_text_bg"
            android:padding="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="5dp"
            android:hint="@string/full_name_edit_text_hint"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailLabel"
            android:text="@string/email_label"
            android:textColor="@color/label_grey"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/m_plus_rounded_1c_extrabold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/emailEditText"
            android:background="@drawable/edit_text_bg"
            android:padding="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="5dp"
            android:hint="@string/email_edit_text_hint"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/passwordLabel"
            android:text="@string/password_label"
            android:textColor="@color/label_grey"
            android:textSize="20sp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/m_plus_rounded_1c_extrabold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/passwordEditText"
            android:background="@drawable/edit_text_bg"
            android:padding="5dp"
            android:inputType="textPassword"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="5dp"
            android:hint="@string/password_edit_text_hint"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/confirmPasswordLabel"
            android:text="@string/confirm_password_label"
            android:textColor="@color/label_grey"
            android:textSize="20sp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/m_plus_rounded_1c_extrabold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/confirmPasswordEditText"
            android:background="@drawable/edit_text_bg"
            android:padding="5dp"
            android:inputType="textPassword"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="5dp"
            android:hint="@string/confirm_password_edit_text_hint"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/signUp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/m_plus_rounded_1c_extrabold"
            android:text="@string/sign_up_button_text"
            android:textColor="@color/white" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>